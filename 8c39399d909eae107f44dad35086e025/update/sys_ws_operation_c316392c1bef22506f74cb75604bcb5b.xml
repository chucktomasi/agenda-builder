        <name>Update</name>
        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

	var answer = {
		"status" : "error",
		"message" : "unknown"
	};
    // Update the Agenda field on the day record
	var agendaObj = request.body.data;
	var dayID = agendaObj.day.sys_id;
	var dayGr = new GlideRecord(Constants.DAY_TABLE);
	if (dayGr.get(dayID)) {
		var au = new AgendaUtil(dayGr);
		dayGr.setValue('agenda', JSON.stringify(agendaObj, null, 4));
		dayGr.setValue('chat_text', au.makeChatText());
		dayGr.update();

		answer = {
			"status" : "ok",
			"message" : "success"
		};
	} else {
		answer.message = "Cannot read Day: " + dayID;
	}

	response.setStatus(answer.status == "ok" ? 200 : 400);
	response.setBody(answer);

})(request, response);]]></operation_script>
